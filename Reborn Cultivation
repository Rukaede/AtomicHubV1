local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Atomic Hub       by: itzRealEzra",
   Icon = 0,
   LoadingTitle = "Atomic Interface Suite",
   LoadingSubtitle = "by itzRealEzra",
   ShowText = "Rayfield",
   Theme = "Default",
   ToggleUIKeybind = "K",
   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "Big Hub"
   },
   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },
   KeySystem = false,
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"Hello"}
   }
})

local Main = Window:CreateTab("Main", nil)
local Section = Main:CreateSection("Auto Farm")

local Misc = Window:CreateTab("Misc", nil)
local DestroyButton = Misc:CreateButton({
   Name = "Close GUI",
   Callback = function()
      Rayfield:Destroy()
   end,
})

-- ðŸ”¹ Pill Recipes (PillName -> array of Herbs)
local PillRecipes = {
   ["Awakening Qi Pill"] = {"Ginseng", "Ginseng", "Spirit Grass", "Spirit Grass"},
   ["Perfect Qi Pill"]   = {"Moonlight Flower", "Moonlight Flower", "Azure Leaf", "Azure Leaf"}
}

-- Store selections
local selectedPill = nil
local selectedRarity = nil

-- Dropdown for Pill
local Pill = Main:CreateDropdown({
   Name = "Choose Pill",
   Options = {"Awakening Qi Pill","Perfect Qi Pill"},
   CurrentOption = "None",
   MultipleOptions = false,
   Flag = "PillDrop",
   Callback = function(Option)
      selectedPill = Option
      print("Selected Pill:", selectedPill)
   end,
})

-- Dropdown for Rarity
local Rarity = Main:CreateDropdown({
   Name = "Choose Rarity",
   Options = {"1", "10", "100", "1000", "10000", "100000"},
   CurrentOption = "None",
   Flag = "RarityDrop",
   Callback = function(Option)
      selectedRarity = Option
      print("Selected Rarity:", selectedRarity)
   end,
})

-- Button to Craft
local AutoCraft = Main:CreateButton({
   Name = "Craft Pill",
   Callback = function()
      if not selectedPill or not selectedRarity then
         warn("âš  Please select both pill and rarity first!")
         return
      end

      -- Look up herb recipe for chosen pill
      local herbs = PillRecipes[selectedPill]
      if not herbs then
         warn("âš  No recipe found for pill:", selectedPill)
         return
      end

      -- Build args using herbs + rarity
      local args = {}
      for i, herb in ipairs(herbs) do
         table.insert(args, "Herb_" .. herb .. "_" .. selectedRarity)
      end
      table.insert(args, 1) -- last argument = how many of each ingredient

      print("ðŸ”¨ Crafting:", selectedPill, "with ->", table.concat(args, ", "))

      local CraftPill = game:GetService("ReplicatedStorage").Events.CraftPill
      CraftPill:FireServer(unpack(args))
   end,
})
